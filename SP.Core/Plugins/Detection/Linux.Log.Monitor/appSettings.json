{
  "Detection": [
    {
      "Name": "ssh",
      "Log": "/var/log/secure",
      "Regex": "Disconnected from authenticating user (?<user>.*) (?<ip>(?:[0-9]{1,3}\\.){3}[0-9]{1,3})",
      "Description": "{ip} failed SSH authentication for user {user}.",
      "CaptureGroups": [
        {
          "Group": "user",
          "Tag": "{user}"
        },
        {
          "Group": "ip",
          "Tag": "{ip}"
        }
      ]
    },
    {
      "Name": "postfix",
      "Log": "/var/log/maillog",
      "Regex": "postfix/smtpd.*: warning: .*\\[(?<ip>(?:[0-9]{1,3}\\.){3}[0-9]{1,3})\\]: .* authentication failed: authentication failure",
      "Description": "{ip} failed SMTP authentication.",
      "CaptureGroups": [
        {
          "Group": "ip",
          "Tag": "{ip}"
        }
      ]

    }
  ]
}