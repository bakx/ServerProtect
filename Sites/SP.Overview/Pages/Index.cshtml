@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h2>Live Data</h2>
            <div class="alert alert-info" role="alert">
                This page will show up to the latest 5 login attempts, blocks and unblocks. It's real time data loaded through SignalR. 
                No previous entries are loaded. Leave the page open to see this page populated on login attempts.
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm">
            <h3>Last 5 Login Attempts</h3>
            <div id="loginAttempts"></div>
        </div>
        <div class="col-sm">
            <h3>Last 5 Blocks</h3>
            <div id="blocks"></div>
        </div>
        <div class="col-sm">
            <h3>Last 5 Unblocks</h3>
            <div id="unblocks"></div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/reportingHub.js"></script>